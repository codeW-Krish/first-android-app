<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editprofile"
    android:orientation="vertical"
    android:background="#F9F3E6">

    <!-- Header Section -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:text="Edit Profile"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:textColor="#333333"/>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:src="@drawable/profile_picture"
        android:background="@drawable/profile_picture"
        android:contentDescription="Logo"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_change_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Picture"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="#03A8F3"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email"
        android:textSize="18sp"
        android:inputType="text"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#333333"/>

    <!-- Editable Fields -->

    <EditText
        android:id="@+id/ep_username"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/sign_in_name"
        android:hint="Username"
        android:autofillHints="name"
        android:inputType="text"
        android:textColorHint="#333333" />

    <EditText
        android:id="@+id/ep_email"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/email"
        android:hint="New Email"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:textColorHint="#333333"/>

    <EditText
        android:id="@+id/ep_phone"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/phone_logo"
        android:hint="Phone Number"
        android:autofillHints="phone"
        android:inputType="phone"
        android:textColorHint="#333333"/>


    <!-- Save Changes Button -->
    <Button
        android:id="@+id/btn_save_changes"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Save Changes"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A8F3"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"/>

    <!-- Optional Cancel Button -->
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:text="Cancel"
        android:textColor="#03A8F3"
        android:textSize="16sp" />
</LinearLayout>
