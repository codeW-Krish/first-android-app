<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/signup_logo"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Sign in to Twitter"
        android:textSize="36sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        />

    <EditText
        android:id="@+id/et_signin_name"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/sign_in_name"
        android:hint=" Name"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/et_signin_email"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/email"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/et_signin_phone"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/phone_logo"
        android:hint=" Phone No"
        android:inputType="phone"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="282dp" />


    <EditText
        android:id="@+id/et_signin_pass"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/password_logo"
        android:hint=" Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/et_signin_cof_pass"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/et_border"
        android:drawableStart="@drawable/password_logo"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="282dp" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Sign in"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:backgroundTint="#03A8F3"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have an account?"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/link_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in >"
            android:textStyle="bold|italic"
            android:textSize="17sp"
            android:textColor="#03A7F2"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</LinearLayout>